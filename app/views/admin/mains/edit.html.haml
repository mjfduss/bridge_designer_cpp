.admin_main
  .admin_menu
    .big.bold.menu_item Admin Functions
    = form_tag admin_main_path, :method => :put, :target => 'admin_edit' do
      .menu_item= render :partial => "shared/submit_link", :locals => { :name => 'change_password', :text => "Change password" }
      .menu_item= render :partial => "shared/submit_link", :locals => { :name => 'check_servers', :text => "Check servers" }
      .menu_item
        .menu_label Review (Accept/Reject) top teams:
        = select_tag('team_category', options_for_select(TablesHelper::CATEGORY_PAIRS, '-'))
        = render :partial => "shared/submit_link", :locals => { :name => 'get_team_review', :text => "Go" }
      .menu_item
        .menu_label Preview new standings from database:
        .wrap
          = select_tag 'review_category', options_for_select(TablesHelper::STANDINGS_PAIRS, '-')
          = render :partial => "shared/submit_link", :locals => { :name => 'get_standings_review', :text => "Go" }
        .wrap
          Options:
          = select_tag 'standings_options', options_for_select(TablesHelper::STANDINGS_OPTIONS_PAIRS, '-')
      .menu_item
        .menu_label View currently posted standings:
        .wrap
          = select_tag('posted_category', options_for_select(TablesHelper::STANDINGS_PAIRS, '-'))
          = render :partial => "shared/submit_link", :locals => { :name => 'get_posted_standings', :text => "Go" }
      .menu_item
        .menu_label Find any team:
        .wrap
          Team Name like:
          = text_field_tag('team_name_likeness', '', :size => 12)
        .wrap
          Category:
          = select_tag 'find_category', options_for_select(TablesHelper::CATEGORY_PAIRS, '-')
          = render :partial => "shared/submit_link", :locals => { :name => 'get_any_team', :text => "Go" }
      .menu_item
        .menu_label Administer local contests:
        .wrap
          Filter:
          = text_field_tag('local_contest_filter', '', :size => 4)
          &nbsp;&nbsp;Min # teams:
          = text_field_tag('min_teams', '0', :size => 2)
          = render :partial => "shared/submit_link", :locals => { :name => 'get_local_contests', :text => "Go" }
      .menu_item
        .menu_label Find teams in local contest:
        .wrap
          Local contest code:
          = text_field_tag('local_contest_code', '', :size => 4)
          = render :partial => "shared/submit_link", :locals => { :name => 'get_local_contest_teams', :text => "Go" }
      .menu_item
        .menu_label Get email menu for leaders:
        .wrap
          Show top:
          = text_field_tag('min_teams', '20', :size => 2)
          = render :partial => "shared/submit_link", :locals => { :name => 'get_local_contest_teams', :text => "Go" }
      %hr
      .menu_item
        .menu_label Options
        .wrap
          Review and standings cutoff:
          = select_tag 'standings_cutoff', options_for_select(TablesHelper::STANDINGS_CUTOFF_PAIRS, 50)
      .menu_item
        .wrap Visible columns (Ctrl-click to select):
        = select_tag 'visible_attributes', options_for_select(TablesHelper::TEAM_ATTRIBUTE_PAIRS, TablesHelper::TEAM_ATTRIBUTE_DEFAULTS), :multiple => true, :size => 11
      .menu_item
        .wrap Visible teams:
        = select_tag 'visible_attributes', options_for_select(TablesHelper::STATUS_PAIRS, TablesHelper::STATUS_PAIR_DEFAULTS), :multiple => true, :size => 2
  %iframe{ :class => 'admin_edit', :name => 'admin_edit', :src => 'http://bridgecontest.usma.edu' }
